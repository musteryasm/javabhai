object MaxNum {
 def main(args: Array[String]): Unit = {
 val num1 = 10
 val num2 = 25
 val num3 = 15
 val maxNumber = findMax(num1, num2, num3)

 println(s"The maximum number among $num1, $num2, and $num3 is: $maxNumber")
 }
 def findMax(a: Int, b: Int, c: Int): Int = {
 if (a >= b && a >= c) {
 a
 } else if (b >= a && b >= c) {
 b
 } else {
 c
 }
 }
}
